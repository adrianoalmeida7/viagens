<h1>Listing pessoas</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Data de Nascimento</th>
	<th>Lugares viajados</th>
  </tr>

  <% for pessoa in @pessoas %>
    <tr>
      <td><%= pessoa.neo_id %> -- <%=h pessoa.nome %></td>
      <td><%=h pessoa.data_nascimento %></td>
	  <td><% pessoa.viajou_para.each do |v| %>
			<%= v.cidade %> <br />
		  <% end %>
	  </td>
      <td><%= link_to 'Edit', edit_pessoa_path(pessoa) %></td>
      <td><%= link_to 'Destroy', pessoa, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New pessoa', new_pessoa_path %>
